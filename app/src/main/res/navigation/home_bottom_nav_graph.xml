<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_bottom_nav_graph"
    app:startDestination="@id/journeysFragment">

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.about.AboutFragment"
        android:label="@string/page_about"
        tools:layout="@layout/fragment_about">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_aboutFragment_pop"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/aboutFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.profile.ProfileFragment"
        android:label="@string/page_profile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_profileFragment_pop"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/journeysFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.journey.home.HomeFragment"
        android:label="@string/page_journey"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="true"
            app:argType="boolean" />
        <action
            android:id="@+id/action_journeysFragment_pop"
            app:popUpTo="@id/journeysFragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.journey.add.AddFragment"
        android:label="@string/page_add_journey"
        tools:layout="@layout/fragment_add">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_addFragment_pop"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/addFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.journey.edit.EditFragment"
        android:label="@string/page_update_journey"
        tools:layout="@layout/fragment_edit">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_editFragment_pop"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/editFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/viewFragment"
        android:name="com.ismt.dibeshrajsubedi.journeyjournal.views.fragments.home.journey.view.ViewFragment"
        android:label="@string/page_view_journey"
        tools:layout="@layout/fragment_view">
        <argument
            android:name="@string/args_show_toolbar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="@string/args_show_bottom_navigation_view"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_viewFragment_pop"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/viewFragment"
            app:popUpToInclusive="true"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>

</navigation>