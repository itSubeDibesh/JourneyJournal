<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.fragments.journey.view.ViewFragment">

    <TextView
        android:id="@+id/tv_journey_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_small"
        android:layout_marginTop="@dimen/dp_medium"
        android:layout_marginRight="@dimen/dp_small"
        android:layout_marginBottom="@dimen/dp_medium"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="@dimen/dp_small"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="3"
        android:text="@string/message_welcome"
        android:textSize="@dimen/sp_bit_medium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_journey_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ib_200"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_img_journey_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_small"
        android:layout_marginTop="@dimen/dp_medium"
        android:layout_marginRight="@dimen/dp_small"
        android:layout_marginBottom="@dimen/dp_medium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_journey_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="@dimen/dp_extra_large"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="@dimen/dp_small"
            android:gravity="center"
            android:text="@string/field_journey_date"
            android:textSize="@dimen/dp_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_journey_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/dp_large"
            android:drawableLeft="@drawable/ic_gps"
            android:drawablePadding="@dimen/dp_small"
            android:gravity="center"
            android:text="@string/field_journey_address"
            android:textSize="@dimen/dp_medium"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ib_250"
        android:layout_marginLeft="@dimen/dp_medium"
        android:layout_marginRight="@dimen/dp_medium">
        <TextView
            android:id="@+id/tv_journey_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ib_250"
            android:text="@string/dummy_lorem"
            android:textSize="@dimen/dp_medium" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_medium"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_journey_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_medium"
            android:drawableLeft="@drawable/ic_edit"
            android:drawableTint="@color/white"
            android:padding="@dimen/dp_small"
            android:text="@string/button_edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_medium"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,RtlHardcoded" />

        <Button
            android:id="@+id/btn_journey_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_medium"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_delete"
            android:drawableTint="@color/white"
            android:padding="@dimen/dp_small"
            android:text="@string/button_delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_medium"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,RtlHardcoded" />
    </LinearLayout>


</LinearLayout>