<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ismt.dibeshrajsubedi.journeyjournal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JourneyJournal.NoActionBar">
        <activity
            android:name=".views.activities.add_edit.AddEditActivity"
            android:exported="false"
            android:parentActivityName=".views.activities.home.HomeActivity"
            android:theme="@style/Theme.JourneyJournal" />
        <activity
            android:name=".views.activities.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.authentication.AuthenticationActivity"
            android:exported="false" />
        <activity
            android:name=".views.launcher.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>